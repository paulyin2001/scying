extends logonlayout

block content
  .container
    .row
      .col-md-8.col-md-offset-2
        h1 Track Package
        p
          img(src='/images/thumbnail.png',alt='item')
          b.bigGreenText   Arriving today by 8pm
        p(align='right')
          b It's out for delivery
        .progress
          .progress-bar.progress-bar-success(role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: 80%;")
    .row
      .col-md-4.col-md-offset-2
        h3 Get shipment updates with the free Amazon app
        .orderBox
      .col-md-4
        h3 Shipment details
        .orderBox
          b Latest update: Thursday, May 19
          br
          hr
          .row
            .col-md-3
              span 8:00 AM
            .col-md-9
              p Out for delivery
              p San Francisco, CA, US
              hr
              p Carrier: USPS, Tracking #: 93748123859310398015
          hr
          .row
            .col-md-3
              span 3:16 AM
            .col-md-9
              p Package received by carrier
              p San Francisco, CA, US
          hr
          .row
            .col-md-3
              span 3:08 AM
            .col-md-9
              p Package has been transferred to the USPS and will be delivered by your local postal office 
              p San Francisco, CA, US
          b Wednesday, May 18
          br
          hr
          .row
            .col-md-3
              span 9:12 PM
            .col-md-9
              p Shipment departed from Amazon facility
              p Pittsburgh, PENNSYLVANIA, US
          .row
            .col-md-3
              span 2:46 PM
            .col-md-9
              p Shipment arrived at Amazon facility 
              p Pittsburgh, PENNSYLVANIA, US
          b Tuesday, May 17
          br
          hr
          .row
            .col-md-3
              span 11:07 PM
            .col-md-9
              p Package has left seller facility and is in transit to carrier

  footer.container-fluid.text-center
